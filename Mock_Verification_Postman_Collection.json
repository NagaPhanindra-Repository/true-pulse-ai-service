{
	"info": {
		"_postman_id": "verification-mock-api-collection",
		"name": "TruePulseAI - Mock Verification API",
		"description": "Complete API collection for testing the Mock Trulioo Verification feature",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Signup - Create New User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userName\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"countryCode\": \"91\",\n  \"mobileNumber\": \"1234567890\",\n  \"gender\": \"MALE\",\n  \"roleName\": \"USER\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/signup",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "signup"]
						}
					},
					"response": []
				},
				{
					"name": "Login - Get JWT Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save the JWT token to environment variable",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"jwt_token\", jsonData.accessToken);",
									"    console.log(\"JWT Token saved: \" + jsonData.accessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"usernameOrEmail\": \"testuser\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						}
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/me",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "me"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "2. Verification Flow",
			"item": [
				{
					"name": "Step 1 - Check Initial Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/verification/status/current",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "status", "current"]
						}
					},
					"response": []
				},
				{
					"name": "Step 2 - Create Verification Session",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save session ID and verification URL",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"session_id\", jsonData.sessionId);",
									"    pm.environment.set(\"verification_url\", jsonData.verificationUrl);",
									"    console.log(\"Session ID: \" + jsonData.sessionId);",
									"    console.log(\"Verification URL: \" + jsonData.verificationUrl);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"countryCode\": \"IN\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/verification/create",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "create"]
						}
					},
					"response": []
				},
				{
					"name": "Step 3 - Get Session Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/verification/status/{{session_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "status", "{{session_id}}"]
						}
					},
					"response": []
				},
				{
					"name": "Step 4 - Approve Verification (Mock)",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/verification/approve/{{session_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "approve", "{{session_id}}"]
						}
					},
					"response": []
				},
				{
					"name": "Step 5 - Poll Verification Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/verification/status/current",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "status", "current"]
						}
					},
					"response": []
				},
				{
					"name": "Step 6 - Verify User is Verified",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/me",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "me"]
						}
					},
					"response": []
				},
				{
					"name": "Reset Verification (Testing)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/verification/reset",
							"host": ["{{base_url}}"],
							"path": ["api", "verification", "reset"]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "session_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "verification_url",
			"value": "",
			"type": "string"
		}
	]
}

